{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./"],
    "types": ["node", "express", "jest"]
  },
  "include": [
    "src/**/*.ts",
    "src/types.d.ts",
    "src/tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
